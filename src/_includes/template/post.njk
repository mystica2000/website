{% extends "template/home.njk" %}

{% block main %}
<div class="container">
    <div class="post-container">
        <div class="post-header">
             <h1>{{title}}</h1>
             <p class="date">Last Updated: {{page.date.toUTCString()}}</p>
                <ul class="tags post-tags">
                {% for tag in tags %}
                  {% if tag !== 'post' %}
                  <li class="tagss">{{tag}}</li>
                  {% endif %}
                {% endfor %}
              </ul>
        </div>
        <div>
            {{content | safe }}
         <a class="twitter-share-button"
              href="https://twitter.com/intent/tweet"
              data-via="CuriouzMystee"
              data-url="https://mystica.pages.dev/blog/"
              data-text="{{title}}-{{desp}}"
              id="share-btn"
              data-size="large">Tweet this article</a>
        </div>
    </div>
</div>
{% endblock %}
