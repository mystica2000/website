{% extends "template/home.njk" %}

{% block main %}
<div class="container">
    <h1>Writings</h1>
    <section>
    <ul>
    {% for post in collections.post | reverse %}

            <li class="blog">
               <div class="tags">
                   {% for tag in post.data.tags %}
                      {% if tag !== 'post' %}
                      <div class="tagss">{{tag}}</div>
                      {% endif %}
                   {% endfor %}
               </div>
               <div class="body">
                   <div class="heading">
                       <a href="{{post.url}}" class="blog-title"><h2> {{post.data.title}}</h2></a>
                   </div>
                   <span style="font-size:14px"> ðŸ•” {{post.date.toDateString()}}</span>
                   <div class="content">
                    <p>
                    {{post.data.desp}}
                    </p>
                  </div>
               </div>
            </li>
{% endfor %}
    </ul>
    </section>
</div>
{% endblock %}
